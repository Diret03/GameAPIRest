@model GameAPI.Models.DTO.GameResponseDTO
@{
    ViewData["Title"] = "Detalles del Juego";
}

<style>
    :root {
        --primary: #059669;
        --secondary: #fcd34d;
        --dark: #18181b;
        --white: #ffffff;
        --zinc: #6c757d;
        --yellow: #fcd34d;
    }
    
    .card {
        border: none;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        background-color: var(--primary);
        color: var(--white);
        font-weight: 600;
    }
    
    .card-body dt {
        font-weight: 500;
        color: var(--dark);
    }
    
    .card-body dd {
        margin-bottom: 1rem;
    }
    
    .btn-primary-bg {
        background-color: var(--primary);
        color: var(--white);
    }
    
    .btn-primary-bg:hover {
        background-color: #047857; /* Un tono más oscuro de emerald-600 */
        color: var(--white);
    }

    .btn-outline-secondary:hover {
        background-color: var(--zinc);
        color: var(--white);
    }

    .btn-outline-secondary:focus {
        box-shadow: 0 0 0 0.25rem rgba(108, 117, 125, 0.5) !important;
    }

    .btn-warning {
        background-color: var(--yellow);
        color: var(--dark);
    }

    .btn-warning:hover {
        background-color: #fbbf24; /* Un tono más oscuro de yellow-200 */
        color: var(--dark);
    }

    .btn-warning:focus {
        box-shadow: 0 0 0 0.25rem rgba(252, 211, 77, 0.5) !important;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold primary-text">
                <i class="fas fa-info-circle me-2"></i>Detalles del Videojuego
            </h2>
            <p class="text-muted">Información detallada del juego seleccionado</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header primary-bg text-white">
            Información del Juego
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Fecha de Lanzamiento</dt>
                <dd class="col-sm-9">@Model.ReleaseDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-3">Género</dt>
                <dd class="col-sm-9">@Model.Genre.Name</dd>

                <dt class="col-sm-3">Desarrollador</dt>
                <dd class="col-sm-9">@Model.Developer.Name (@Model.Developer.Location)</dd>

                <dt class="col-sm-3">Plataformas</dt>
                <dd class="col-sm-9">@string.Join(", ", Model.Platforms.Select(p => p.Name))</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
        </a>
    </div>
</div>