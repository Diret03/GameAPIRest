@model GameAPI.Models.DTO.PlatformResponseDTO

@{
    ViewData["Title"] = "Eliminar Plataforma";
}

<style>
    :root {
        --primary: #059669;
        --secondary: #fcd34d;
        --dark: #18181b;
        --white: #ffffff;
        --zinc: #6c757d;
    }
    
    .card {
        border: none;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        background-color: var(--primary);
        color: var(--white);
        font-weight: 600;
    }
    
    .card-body dt {
        font-weight: 500;
        color: var(--dark);
    }
    
    .card-body dd {
        margin-bottom: 1rem;
    }
    
    .btn-primary-bg {
        background-color: var(--primary);
        color: var(--white);
    }
    
    .btn-primary-bg:hover {
        background-color: #047857; /* Un tono más oscuro de emerald-600 */
        color: var(--white);
    }

    .btn-outline-secondary:hover {
        background-color: var(--zinc);
        color: var(--white);
    }

    .btn-outline-secondary:focus {
        box-shadow: 0 0 0 0.25rem rgba(108, 117, 125, 0.5) !important;
    }

    .btn-danger:focus {
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.5) !important;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold primary-text">
                <i class="fas fa-trash-alt me-2"></i>Eliminar Plataforma
            </h2>
            <p class="text-muted">¿Estás seguro de que deseas eliminar esta plataforma?</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-info-circle me-2"></i>Información de la Plataforma
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-dark">ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3 text-dark">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" class="d-inline">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-2"></i>Eliminar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
            </a>
        </form>
    </div>
</div>
