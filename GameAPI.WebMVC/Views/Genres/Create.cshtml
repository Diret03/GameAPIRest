@model GameAPI.Models.DTO.CreateGenreDTO

@{
    ViewData["Title"] = "Nuevo Género";
}

<style>
    :root {
        --primary: #059669;
        --secondary: #fcd34d;
        --dark: #18181b;
        --white: #ffffff;
        --zinc: #6c757d;
    }
    
    .btn-primary-custom {
        background-color: var(--primary) !important;
        color: var(--white) !important;
        border: none;
    }
    
    .btn-primary-custom:hover {
        background-color: #047857 !important;
        color: var(--white) !important;
    }

    .btn-primary-custom:focus {
        box-shadow: 0 0 0 0.25rem rgba(5, 150, 105, 0.5) !important;
    }

    .btn-outline-secondary:focus {
        box-shadow: 0 0 0 0.25rem rgba(108, 117, 125, 0.5) !important;
    }

    .form-control:focus {
        border-color: var(--primary) !important;
        box-shadow: 0 0 0 0.25rem rgba(5, 150, 105, 0.25) !important;
    }

    select.form-control:focus,
    select.form-select:focus {
        border-color: var(--primary) !important;
        box-shadow: 0 0 0 0.25rem rgba(5, 150, 105, 0.25) !important;
    }

    textarea.form-control:focus {
        border-color: var(--primary) !important;
        box-shadow: 0 0 0 0.25rem rgba(5, 150, 105, 0.25) !important;
    }

    input[type="date"]:focus {
        border-color: var(--primary) !important;
        box-shadow: 0 0 0 0.25rem rgba(5, 150, 105, 0.25) !important;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold primary-text">
                <i class="fas fa-tags me-2"></i>Nuevo Género
            </h2>
            <p class="text-muted">Completa el formulario para agregar un nuevo género de juegos</p>
        </div>
    </div>

    <div class="card p-4">
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Nombre del Género</label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre del género"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex gap-2">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-save me-2"></i>Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Volver
                        </a>
                    </div>
                </form>
            </div>
            <div class="col-md-4 d-none d-md-block">
                <img src="https://www.anzu.io/hubfs/Blog_Collage_Why%20there%20is%20no%20one-size-fits-all%20game%20genre%20for%20advertisers.jpg" 
                     class="img-fluid rounded-circle mb-3" alt="Genre Icon">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
